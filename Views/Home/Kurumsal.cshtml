@model bayessoft.Models.LayoutViewModel
@{
    ViewData["Title"] = Model.Navbar.Kurumsal;
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="/css/kurumsal.css" />
}

<section class="kurumsal-hero py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <img src="/images/genel/kurumsal.jpg" alt="Kurumsal" class="img-fluid rounded shadow" />
            </div>
            <div class="col-md-6">
                <h5 class="kurumsal-baslik text-danger fw-bold mb-2">
                    @(Model.IsEnglish ? "Welcome to Bayes Soft" : "Bayes Soft’a Hoş Geldiniz")
                </h5>
                <h2 class="fw-bold mb-3">@(Model.IsEnglish ? "About Us" : "Hakkımızda")</h2>
                
                <p class="mt-3">@Html.Raw(Model.Icerikler["kurumsal-hakkimizda"].GetDescription(Model.IsEnglish))</p>
            </div>
        </div>
    </div>
</section>


<section class="kurumsal-counters text-white py-5">
    <div class="container text-center">
        <div class="bayes-header d-flex align-items-center justify-content-center mb-2">
         <div class="line"></div>
        <h4 class="text-danger fw-bold kurumsal-bayes">BAYES</h4>
          <div class="line"></div>
        </div>
        <h2 class="fw-bold display-5 mb-5">SOFT</h2>
        <div class="row">
            <div class="col-md-4">
                <h2 class="display-4 fw-bold text-danger">@Model.Icerikler["personel-sayac"].GetDescription(Model.IsEnglish)<span class="plus-sign">+</span></h2>
                <p>@Model.Icerikler["uzman-personel"].GetDescription(Model.IsEnglish)</p>
            </div>
            <div class="col-md-4">
                <h2 class="display-4 fw-bold text-danger">@Model.Icerikler["kurumsal-sayac"].GetDescription(Model.IsEnglish)<span class="plus-sign">+</span></h2>
                <p>@Model.Icerikler["kurumsal-musteri"].GetDescription(Model.IsEnglish)</p>
            </div>
            <div class="col-md-4">
                <h2 class="display-4 fw-bold text-danger">@Model.Icerikler["projeler-sayac"].GetDescription(Model.IsEnglish)<span class="plus-sign">+</span></h2>
                <p>@Model.Icerikler["projeler"].GetDescription(Model.IsEnglish)</p>
            </div>
        </div>
    </div>
</section>


<section class="kurumsal-mvy py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="box-mvy active">
                    <h5>@Model.Icerikler["misyon-baslik"].GetDescription(Model.IsEnglish)</h5>
                    <p>@Model.Icerikler["misyon-metin"].GetDescription(Model.IsEnglish)</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="box-mvy">
                    <h5>@Model.Icerikler["vizyon-baslik"].GetDescription(Model.IsEnglish)</h5>
                    <p>@Model.Icerikler["vizyon-metin"].GetDescription(Model.IsEnglish)</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="box-mvy">
                    <h5>@Model.Icerikler["yaklasimimiz-baslik"].GetDescription(Model.IsEnglish)</h5>
                    <p>@Model.Icerikler["yaklasimimiz-metin"].GetDescription(Model.IsEnglish)</p>
                </div>
            </div>
        </div>
    </div>
</section>