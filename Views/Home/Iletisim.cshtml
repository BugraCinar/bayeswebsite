@model bayessoft.Models.LayoutViewModel

@{
    ViewData["Title"] = Model.Navbar.Iletisim;
    Layout = "_Layout";
}


<div class="google-map-container">
    <iframe
        src="https://maps.google.com/maps?q=36.983725795000396,35.32984438930713&z=15&output=embed"
        width="100%" height="400" style="border:0;" allowfullscreen=""
        loading="lazy" referrerpolicy="no-referrer-when-downgrade">
    </iframe>
</div>


<section class="iletisim-section py-5">
    <div class="container">
        <div class="row g-5">
            
            <div class="col-md-6">
                <h5 class="text-danger border-start border-3 ps-2 fw-bold">
                    @(Model.IsEnglish ? "Contact Form" : "İletişim Formu")
                </h5>
                <h2 class="fw-bold mb-4">
                    @(Model.IsEnglish ? "Send a Message" : "Mesaj Gönder")
                </h2>

                <form>
                    <input type="text" class="form-control mb-3" placeholder="@(Model.IsEnglish ? "Name Surname" : "Ad/Soyad")" />
                    <input type="email" class="form-control mb-3" placeholder="@(Model.IsEnglish ? "E-Mail" : "E-Posta")" />
                    <input type="text" class="form-control mb-3" placeholder="@(Model.IsEnglish ? "Phone Number" : "Telefon")" />
                    <input type="text" class="form-control mb-3" placeholder="@(Model.IsEnglish ? "Subject" : "Konu")" />
                    <textarea rows="5" class="form-control mb-3" placeholder="@(Model.IsEnglish ? "Your Message" : "Mesajınız")"></textarea>
                    <button type="submit" class="btn btn-danger px-4 py-2">
                        @(Model.IsEnglish ? "Send Message" : "Gönder")
                    </button>
                </form>
            </div>

           
            <div class="col-md-6">
                <h5 class="text-danger border-start border-3 ps-2 fw-bold">
                    @(Model.IsEnglish ? "Contact Information" : "İletişim Bilgileri")
                </h5>
                <h2 class="fw-bold mb-4">
                    @(Model.IsEnglish ? "You Can Reach Us" : "Bize Ulaşabilirsiniz")
                </h2>

                <div class="iletisim-info-box text-light p-4 rounded">
                    <h6 class="text-danger fw-bold mb-1 display-6">
                        @(Model.IsEnglish ? "Our Phone Number" : "Telefon Numaramız")
                    </h6>
                    <p class="fs-5 mb-3">@Model.Contact.Telefon</p>

                    <h6 class="text-danger fw-bold mb-1 display-6">
                        @(Model.IsEnglish ? "Our E-Mail Address" : "E-posta Adresimiz")
                    </h6>
                    <p class="fs-5 mb-3">@Model.Contact.Mail</p>

                    <h6 class="text-danger fw-bold mb-1 display-6">
                        @(Model.IsEnglish ? "Our Address" : "Adresimiz")
                    </h6>
                    <p class="fs-5">@Model.Contact.Adres</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="/css/iletisim.css" />
}
