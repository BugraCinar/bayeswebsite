@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Yönetim Paneli</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            margin: 0;
            display: flex;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .sidebar {
            width: 240px;
            background-color: #2c3e50;
            color: white;
            display: flex;
            flex-direction: column;
            padding: 20px 0;
        }

        .sidebar h2 {
            text-align: center;
            font-size: 20px;
            margin-bottom: 30px;
        }

        .menu-link {
            padding: 12px 20px;
            cursor: pointer;
            text-decoration: none;
            color: white;
            transition: background 0.3s;
        }

        .menu-link:hover {
            background-color: #34495e;
        }

        .logout {
            margin-top: auto;
            background-color: #c0392b;
            text-align: center;
        }

        .logout:hover {
            background-color: #e74c3c;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Yönetim Paneli</h2>
        <a class="menu-link" onclick="loadPanelContent('admin')">Admin</a>
        <a class="menu-link" onclick="loadPanelContent('ayarlar')">Ayarlar</a>
        <a class="menu-link" onclick="loadPanelContent('hizmetkategorileri')">Hizmet Kategorileri</a>
        <a class="menu-link" onclick="loadPanelContent('hizmetler')">Hizmetler</a>
        <a class="menu-link" onclick="loadPanelContent('icerikler')">İçerikler</a>
        <a class="menu-link" onclick="loadPanelContent('referanslar')">Referanslar</a>
        <a class="menu-link logout" href="/admin">Çıkış Yap</a>
    </div>

    <div class="content" id="icerik-alani">
        <h3>Admin Paneline Hoş Geldiniz.</h3>
        <p>Lütfen sol menüden bir bölüm seçiniz.</p>
    </div>

    <script src="/js/admin.js"></script>
</body>
</html>

