@model List<bayessoft.Models.Ayar>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 15px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #2c3e50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    button {
        padding: 8px 12px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button:hover {
        background-color: #2980b9;
    }

    #ayarFormContainer {
        margin-top: 20px;
        padding: 15px;
        background-color: #ecf0f1;
        border-radius: 6px;
        border: 1px solid #ccc;
    }
</style>

<table>        <!-- ayar list kismi formada id degistirme yerini degistirmek mi idyi eklemek mi buraya goz at-->
    <thead>
        <tr>
            <th>Ayar Adı</th>
            <th>İçerik</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ayar in Model)
        {
            <tr>
                <td>@ayar.AyarAdi</td>
                <td>@ayar.Icerik</td>
                <td>
                    <button data-edit-ayar="@ayar.Id">Düzenle</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button data-edit-ayar="0">+ Yeni Ayar Ekle</button>

<div id="ayarFormContainer"></div>