@model List<bayessoft.Models.Admin>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 15px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #2c3e50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    button {
        padding: 8px 12px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button:hover {
        background-color: #2980b9;
    }

    #adminFormContainer {
        margin-top: 20px;
        padding: 15px;
        background-color: #ecf0f1;
        border-radius: 6px;
        border: 1px solid #ccc;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Username</td>
                <td>
                    <button data-edit-admin="@admin.Id">Düzenle</button>
                </td>
            </tr>
        }
    </tbody>
</table>


<button data-edit-admin="0">+ Yeni Admin Ekle</button>


<div id="adminFormContainer"></div>