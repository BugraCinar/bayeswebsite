@model bayessoft.Models.HizmetKategori

<style>
    form {
        display: flex;
        flex-direction: column;
        gap: 16px;
        max-width: 600px;
    }

    label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 4px;
    }

    input[type="text"],
    input[type="file"],
    textarea {
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 100%;
    }

    textarea {
        resize: vertical;
    }

    button[type="submit"] {
        padding: 10px 20px;
        background-color: #27ae60;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 15px;
        cursor: pointer;
        align-self: flex-start;
    }

    button[type="submit"]:hover {
        background-color: #1e874b;
    }

    .mevcut-resim {
        font-size: 14px;
        color: #555;
        margin-top: 5px;
    }

    .mevcut-resim img {
        max-width: 150px;
        margin-top: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
</style>

<form id="kategoriForm" enctype="multipart/form-data">  <!-- form kismi iste aslinda url ekleme kismi da yapilmali s3 bucket kurulana kadar idare eder -->
    <input type="hidden" name="Id" value="@Model.Id" />

    <div>
        <label>Kategori Adı (TR)</label>
        <input type="text" name="KategoriAdiTr" value="@Model.KategoriAdiTr" required />
    </div>

    <div>
        <label>Kategori Adı (EN)</label>
        <input type="text" name="KategoriAdiEn" value="@Model.KategoriAdiEn" required />
    </div>

    <div>
        <label>Bağlantı Uzantısı</label>
        <input type="text" name="BaglantiUzantisi" value="@Model.BaglantiUzantisi" required />
    </div>

    <div>
        <label>Resim Yükle (maks. 5MB)</label>
        <input type="file" name="ResimDosyasi" accept=".jpg,.jpeg,.png,.webp" />
        @if (!string.IsNullOrWhiteSpace(Model.ResimUrl))
        {
            <div class="mevcut-resim">
                <p>Mevcut:</p>
                <img src="/images/kategoriler/@Model.ResimUrl" alt="Kategori Resmi" />
                <p><strong>@Model.ResimUrl</strong></p>
            </div>
        }
    </div>

    <button type="submit">Kaydet</button>
</form>
