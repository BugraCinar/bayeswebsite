@model bayessoft.Models.Referans

<style>
    form {
        display: flex;
        flex-direction: column;
        gap: 16px;
        font-size: 15px;
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    input[type="text"],
    input[type="file"] {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
        background-color: #fff;
    }

    input[type="file"] {
        padding: 6px;
    }

    button[type="submit"] {
        padding: 10px 18px;
        background-color: #27ae60;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 15px;
        cursor: pointer;
        align-self: flex-start;
    }

    button[type="submit"]:hover {
        background-color: #219150;
    }

    img {
        margin-top: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        max-width: 150px;
    }
</style>

<form id="referansForm" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div>
        <label>İsim</label>
        <input type="text" name="Isim" value="@Model.Isim" required />
    </div>

    <div>
        <label>Logo Yükle (Zorunlu - max 5MB)</label>
        <input type="file" name="ResimDosyasi" accept=".jpg,.jpeg,.png,.webp" @(Model.Id == 0 ? "required" : "") />
        @if (!string.IsNullOrWhiteSpace(Model.ResimUrl))
        {
            <div>
                <p>Mevcut:</p>
                <img src="/images/referanslar/@Model.ResimUrl" alt="Referans Görseli" />
            </div>
        }
    </div>

    <button type="submit">Kaydet</button>
</form>