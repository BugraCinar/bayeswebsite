@model List<bayessoft.Models.Referans>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 15px;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
        vertical-align: middle;
    }

    th {
        background-color: #2c3e50;
        color: white;
    }

    img {
        max-width: 100px;
        max-height: 50px;
    }

    button {
        padding: 8px 12px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 4px;
        margin-right: 6px;
        cursor: pointer;
    }

    button.delete {
        background-color: #c0392b;
    }

    #referansFormContainer {
        margin-top: 20px;
        padding: 15px;
        background-color: #ecf0f1;
        border-radius: 6px;
        border: 1px solid #ccc;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Logo</th>
            <th>İsim</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var refItem in Model)
        {
            <tr>
                <td><img src="/images/referanslar/@refItem.ResimUrl" alt="Referans" /></td>
                <td>@refItem.Isim</td>
                <td>
                    <button data-edit-referans="@refItem.Id">Düzenle</button>
                    <button class="delete" onclick="deleteReferans(@refItem.Id)">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button data-edit-referans="0">+ Yeni Referans Ekle</button>

<div id="referansFormContainer"></div>